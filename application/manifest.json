{
    "version": "0.9.2",

    "name": "Kynetx Event Console",
    "description": "Kynetx Event Console is an EventAPI Event Visualizer and Constructor tool, helps developers build, debug and test Evented APIs.",

    "options_page": "index.html#options",
    "background": {"page":"background.html"},

    "icons": {
        "16": "images/logo/16.png",
        "32": "images/logo/32.png",
        "48": "images/logo/48.png",
        "128": "images/logo/128.png"
    },

    "app": {
        "launch": {
            "local_path": "index.html"
        }
    },

    "permissions": [
        "tabs",
        "https://*/",        
        "http://*/"
    ],

    "content_security_policy": "script-src 'self' https://cs.kobj.net; object-src 'self'",

    "manifest_version": 3
}
